<div class="row">
    <div class="col s12">
        <div class="root-heading center-align">
            <h2> List of available coureses</h2>
        </div>
    
        <div class="row">
            <% @courses.each do |course| %>
                <div class="col s4 m4">
                    <div class="card blue-grey darken-4">
                        <div class="card-content white-text">
                        <span class="card-title"><%= course.short_name %>: <%= course.name %></span>
                        <p><%= course.description %></p>
                        </div>
                        <div class="card-action">
                        <% if logged_in? && !(current_user.courses.include?(course)) %>
                            <%= link_to "Enroll", course_enroll_path(course_id: course.id), method: :post %>
                        <% end %>
                        <a href="#">Info</a>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>

    </div>
</div>